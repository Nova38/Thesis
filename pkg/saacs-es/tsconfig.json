{
    "include": [
        "src",
        "build.config.ts",
        "playground/api"
    ],
    "compilerOptions": {
        "lib": [
            "es2022"
        ],
        "resolveJsonModule": true,
        "module": "ESNext",
        "target": "ESNext",
        "moduleResolution": "Bundler",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "noEmit": true,
        "allowSyntheticDefaultImports": true,
    },
    "ts-node": {
        "esm": true
    },
}
