{
    "protoc": {
        "options": [
            "--proto_path=${workspaceFolder}",
            "--proto_path=${userHome}/.cache/buf/v1/module/data/"
        ]
    },
    "json.schemas": [
        {
            "fileMatch": [
                "*.specimen.json"
            ],
            "url": "./gen/json_schema/Specimen.json"
            // "url": "./gen/schema.json"
        },
        // {
        //     "fileMatch": [
        //         "*.fabric"
        //     ],
        //     // "url": "./gen/schema.json"

        // }
    ],
    "spellright.language": [
        "en"
    ],
    "spellright.documentTypes": [
        "markdown",
        "latex",
        "plaintext",
        "Log",
        "go"
    ],
    "spellright.parserByClass": {
        "Log": {
            "parser": "code"
        }
    },
    // Add to VS Code settings.js file
    "cSpell.languageSettings": [
        // GoLang settings
        {
            "languageId": "go",
            // Turn off compound words, because it is only checking strings.
            "allowCompoundWords": false,
            // Only check comments and strings
            "includeRegExpList": [
                "CStyleComment",
                "string"
            ],
            // Exclude imports, because they are also strings.
            "ignoreRegExpList": [
                // ignore mulltiline imports
                "import\\s*\\((.|[\r\n])*?\\)",
                // ignore single line imports
                "import\\s*.*\".*?\"",
                // ignore go generate directive
                "//\\s*go:generate.*",
                // ignore nolint directive
                "//\\s*nolint:.*"
            ]
        }
    ],
    "cSpell.enableFiletypes": [
        "!json",
        "!yaml",
        "proto3"
    ],
    "todo-tree.general.showIconsInsteadOfTagsInStatusBar": true,
    "todo-tree.general.showActivityBarBadge": true,
    "todo-tree.tree.buttons.export": false,
    "todo-tree.general.statusBar": "current file",
    "todo-tree.tree.showBadges": true,
    "todo-tree.tree.disableCompactFolders": true,
    "todo-tree.tree.showCountsInTree": false,
    "todo-tree.tree.scanMode": "workspace only",
    "cSpell.words": [
        "ABAC",
        "anypb",
        "authpb",
        "cckey",
        "contractapi",
        "descriptorpb",
        "golines",
        "noauth",
        "oneof",
        "pdfauthor",
        "pdfsubject",
        "protogen",
        "protoreflect",
        "saacs",
        "segmentio",
        "Sfixed",
        "spydra",
        "urlcolor"
    ],
    "files.exclude": {
        "**/.git": true,
        "**/.svn": true,
        "**/.hg": true,
        "**/CVS": true,
        "**/.DS_Store": true,
        "**/Thumbs.db": true,
        ".task/*.*": true,
        "**/.idea": true,
        "**/.task": true
    },
    "explorerExclude.backup": {},
    "editor.minimap.enabled": false,
    "cSpell.enabled": true,
    "workbench.colorCustomizations": {
        "activityBar.activeBackground": "#fa1b49",
        "activityBar.background": "#fa1b49",
        "activityBar.foreground": "#e7e7e7",
        "activityBar.inactiveForeground": "#e7e7e799",
        "activityBarBadge.background": "#155e02",
        "activityBarBadge.foreground": "#e7e7e7",
        "commandCenter.border": "#e7e7e799",
        "sash.hoverBorder": "#fa1b49",
        "statusBar.background": "#dd0531",
        "statusBar.foreground": "#e7e7e7",
        "statusBarItem.hoverBackground": "#fa1b49",
        "statusBarItem.remoteBackground": "#dd0531",
        "statusBarItem.remoteForeground": "#e7e7e7",
        "titleBar.activeBackground": "#dd0531",
        "titleBar.activeForeground": "#e7e7e7",
        "titleBar.inactiveBackground": "#dd053199",
        "titleBar.inactiveForeground": "#e7e7e799"
    },
    "peacock.color": "#dd0531",
    // "plantuml.server": "http://localhost:8888",
    // "plantuml.render": "PlantUMLServer",

}
