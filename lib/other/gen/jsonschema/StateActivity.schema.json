{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "$ref": "#/definitions/StateActivity",
    "definitions": {
        "StateActivity": {
            "properties": {
                "tx_id": {
                    "type": "string",
                    "description": "The transaction id that caused the change"
                },
                "msp_id": {
                    "type": "string",
                    "description": "The msp of the user that caused the change"
                },
                "user_id": {
                    "type": "string",
                    "description": "The id of the user that caused the change"
                },
                "timestamp": {
                    "type": "string",
                    "description": "The timestamp of the change",
                    "format": "date-time"
                },
                "note": {
                    "type": "string",
                    "description": "A note about the change"
                }
            },
            "additionalProperties": true,
            "type": "object",
            "title": "State Activity",
            "description": "Can be used as the history entry"
        }
    }
}