{
    "include": [
        "src",
        "build.config.ts"
    ],
    "compilerOptions": {
        "lib": [
            "es2023"
        ],
        "resolveJsonModule": true,
        "module": "node16",
        "target": "es2022",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "moduleResolution": "node16",
        "noEmit": false
    },
}
