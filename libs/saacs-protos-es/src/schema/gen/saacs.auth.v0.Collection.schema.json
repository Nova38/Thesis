{
  "$id": "saacs.auth.v0.Collection.schema.json",
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "additionalProperties": false,
  "description": "Collection\r\n ┈┈┈┈┈┈┈┈┈┈┈┈┈┈┈┈┈┈┈┈┈┈┈┈┈┈┈┈┈┈┈┈\r\n Note that the types of items are stored in the default ACLEntry\r\n\r\n key := {COLLECTION}{COLLECTION_ID}",
  "properties": {
    "auth_type": {
      "anyOf": [
        {
          "enum": [
            "AUTH_TYPE_UNSPECIFIED",
            "AUTH_TYPE_NONE",
            "AUTH_TYPE_IDENTITY",
            "AUTH_TYPE_ROLE",
            "AUTH_TYPE_GLOBAL_ROLE",
            "AUTH_TYPE_ATTRIBUTE"
          ],
          "title": "Auth Type",
          "type": "string"
        },
        {
          "maximum": 2147483647,
          "minimum": -2147483648,
          "type": "integer"
        }
      ]
    },
    "collection_id": {
      "description": "The key for the ledger",
      "type": "string"
    },
    "default": {
      "$ref": "saacs.auth.v0.Polices.schema.json"
    },
    "item_types": {
      "items": {
        "type": "string"
      },
      "type": "array"
    },
    "name": {
      "type": "string"
    },
    "use_auth_parents": {
      "type": "boolean"
    }
  },
  "title": "Collection",
  "type": "object"
}
